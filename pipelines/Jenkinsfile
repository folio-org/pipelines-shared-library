#!groovy
import org.folio.models.EurekaTenant
import org.folio.rest_v2.Eureka
import org.jenkinsci.plugins.workflow.libs.Library

//TODO remove branch before merge to master
@Library('pipelines-shared-library@RANCHER-1355') _

properties([
  buildDiscarder(logRotator(numToKeepStr: '50')),
//  disableConcurrentBuilds(),
  parameters([
    folioParameters.cluster(),
    folioParameters.namespace(),
    folioParameters.branch(),
    folioParameters.agent(),
    folioParameters.refreshParameters()
  ])
])

if (params.REFRESH_PARAMETERS) {
  currentBuild.result = 'ABORTED'
  return
}

ansiColor('xterm') {
  node(params.AGENT) {
    try {

      stage('Tests start...') {
        def masterTenant = new EurekaTenant("3bdc231f-5482-486e-9cf4-e89d028d2331", "diku","folio-backend-admin-client", "SecretPassword", "https://folio-eureka-scout-keycloak.ci.folio.org", "https://folio-eureka-scout-kong.ci.folio.org")
        def eureka = new Eureka(this, 'https://folio-eureka-scout-kong.ci.folio.org', masterTenant, false)
//        eureka.registerApplicationDiscovery('app-platform-minimal-1.0.0-SNAPSHOT.142')
        eureka.enableApplicationForTenant('3bdc231f-5482-486e-9cf4-e89d028d2331')
      }

    } catch (e) {
      println "Caught exception: ${e}"
      error(e.getMessage())
    } finally {
      stage('Cleanup') {
        cleanWs notFailBuild: true
      }
    }
  }
}
